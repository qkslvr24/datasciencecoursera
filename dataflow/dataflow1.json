{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Employees",
						"type": "DatasetReference"
					},
					"name": "EmployeeTransform1"
				}
			],
			"sinks": [],
			"transformations": [],
			"scriptLines": [
				"source(output(",
				"          Name as string,",
				"          PhoneNumber as integer,",
				"          ZipCode as string,",
				"          Date as integer,",
				"          FirstName as string,",
				"          Phone as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: true,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'documentPerLine') ~> EmployeeTransform1"
			]
		}
	}
}